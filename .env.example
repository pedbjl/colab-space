# SSH Configuration
SSH_PORT=22

# User Configuration
USER_NAME=researcher
USER_PASSWORD=researcher
ROOT_PASSWORD=root

# SSH Security Settings
# Set to "yes" to allow root login via SSH (default: no, recommended: no)
ALLOW_ROOT_LOGIN=no

# Set to "yes" to allow password authentication (default: no, recommended: no)
# Note: Key-based authentication is always enabled
ALLOW_PASSWORD_AUTH=no

